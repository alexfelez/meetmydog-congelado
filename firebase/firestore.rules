rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{document} {
      allow create: if request.auth.uid == document;
      allow read: if request.auth.uid == document;
      allow write: if request.auth.uid == document;
      allow delete: if request.auth.uid == document;
    }

    match /Perros/{document} {
      allow create: if request.auth != null;
      allow read: if true;
      allow write: if resource.data.propietario == /databases/$(database)/documents/users/$(request.auth.uid);
      allow delete: if resource.data.propietario == /databases/$(database)/documents/users/$(request.auth.uid);
    }

    match /paseos/{document} {
      allow create: if request.auth != null;
      allow read: if true;
      allow write: if resource.data.createdBy == /databases/$(database)/documents/users/$(request.auth.uid);
      allow delete: if resource.data.createdBy == /databases/$(database)/documents/users/$(request.auth.uid);
    }

    match /perros_amigos/{document} {
      allow create: if request.resource.data.usuario_id == /databases/$(database)/documents/users/$(request.auth.uid);
      allow read: if true;
      allow write: if false;
      allow delete: if true;
    }
  }
}
